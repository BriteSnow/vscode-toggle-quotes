{
    "name": "vscode-toggle-quotes",
    "displayName": "Toggle Quotes",
    "description": "Toggle cycle \" -> ' -> `",
    "version": "0.3.5",
    "publisher": "BriteSnow",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/BriteSnow/vscode-toggle-quotes"
    },
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:editor.togglequotes"
    ],
    "extensionKind": [
      "ui",
      "workspace"
    ],
    "main": "./out/src/extension",
    "icon": "icon.png",
    "contributes": {
        "configuration": {
            "title": "Toggle Quotes",
            "properties": {
                "togglequotes.chars": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "\"",
                        "'"
                    ],
                    "description": "The quote characters to toggle between."
                }
            }
        },
        "configurationDefaults": {
            "[typescript]": {
                "togglequotes.chars": [
                    "\"",
                    "'",
                    "`"
                ]
            },
            "[javascript]": {
                "togglequotes.chars": [
                    "\"",
                    "'",
                    "`"
                ]
            },
            "[typescriptreact]": {
                "togglequotes.chars": [
                    "\"",
                    "'",
                    "`"
                ]
            },
            "[javascriptreact]": {
                "togglequotes.chars": [
                    "\"",
                    "'",
                    "`"
                ]
            },
            "[svelte]": {
                "togglequotes.chars": [
                    "\"",
                    "'",
                    "`"
                ]
            },
            "[markdown]": {
                "togglequotes.chars": [
                    "\"",
                    "'",
                    "`"
                ]
            },
            "[go]": {
                "togglequotes.chars": [
                    "\"",
                    "'",
                    "`"
                ]
            }
        },
        "commands": [
            {
                "command": "editor.togglequotes",
                "title": "Toggle Quote"
            }
        ],
        "keybindings": [
            {
                "command": "editor.togglequotes",
                "key": "ctrl+'",
                "mac": "cmd+'"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.7.1",
        "mocha": "^9.1.0",
        "typescript": "^4.3.5",
        "vscode": "^1.1.17"
    }
}
